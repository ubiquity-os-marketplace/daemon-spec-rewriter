{
  "name": "daemon-spec-rewriter",
  "description": "Rewrites specification of an issue based on gihtub conversation",
  "ubiquity:listeners": ["issues.labeled", "issue_comment.created"],
  "skipBotEvents": true,
  "commands": {
    "rewrite": {
      "ubiquity:example": "/rewrite",
      "description": "Rewrites the specification of an issue based on GitHub's issue conversation",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    }
  },
  "configuration": {
    "default": {},
    "type": "object",
    "properties": {
      "openRouterAiModel": {
        "default": "anthropic/claude-3.5-sonnet",
        "type": "string"
      },
      "openRouterBaseUrl": {
        "default": "https://openrouter.ai/api/v1",
        "type": "string"
      },
      "tokenLimit": {
        "default": {},
        "type": "object",
        "properties": {
          "context": {
            "default": 200000,
            "type": "number"
          },
          "completion": {
            "default": 4096,
            "type": "number"
          }
        }
      }
    }
  }
}
